<div id="videosets_show">
  <!-- Use of this code assumes agreement with the Google Custom Search Terms of Service. -->
  <!-- The terms of service are available at http://www.google.com/cse/docs/tos.html -->

  <% if @set.title.match(/Hearing/) %>
    <div id="filter_bar">
      You can look for specific videos by choosing a filter criteria below.
      <ul class="filter-types">
        <li class="filter-item filter-dropdown" id= "region"><a class="dropdown-trigger" href="#">County</a>
          <ul class = "dropdown-menu">
            <% @regions.each do |r| %>
            <li class = "dropdown-menu-item"><a href="<%= "/videosets/1?region=" + r.id.to_s %>"> <%= r.name_and_country -%></a></li>
            <%end%>
          </ul>
        </li>
        <li class="filter-item filter-dropdown" id= "month"><a class="dropdown-trigger" href="#">Month</a>
          <ul class = "dropdown-menu" >
            <% @months.each do |m| %>
            <li class = "dropdown-menu-item"><a href="<%= "/videosets/1?month=" + m['year'].to_s + "%2F" + m['month'].to_s%>"> <%= Date::MONTHNAMES[m['month'].to_i] + " " + m['year'] -%></a></li>
            <%end%>
          </ul>
        </li>
        <li class="filter-item filter-dropdown" id= "linitial"><a  class="dropdown-trigger" href="#">Last Name</a>
          <ul class = "dropdown-menu" >
            <% @linitials.each do |l| %>
            <li class = "dropdown-menu-item"><a href="<%= "/videosets/1?linitial=" + l['linitial'].to_s %>" > <%= l['linitial'] -%></a></li>
            <%end%>
          </ul>
        </li>
        <li class="filter-item filter-dropdown" id= "htype"><a  class="dropdown-trigger" href="#">Hearing Type</a>
          <ul class = "dropdown-menu" >
            <% @htypes.each do |h| %>
            <li class = "dropdown-menu-item"><a href= "<%= "/videosets/1?htype=" +  h.id.to_s%>" > <%= h.name -%></a></li>
            <%end%>
          </ul>
        </li>
      </ul>
      <form id="filter_form">
        <input type="hidden" name="clear" value="1">
      </form>
    </div>
  <% end %>

  <%= render(:partial => "small_nav")%>

  <div id="videos">
    <% if @videos.empty? %>
      <div id="not_found">No videos found.</div>
    <% else %>
      <% count = 0 %>
      <% @videos.each do |v| count += 1 %>
        <div class="thumbnail">
          <%= link_to(image_tag(v.path("thumbnail"), :alt => v.title), v) %>
          <%= v.title %>
        </div>
        <% if count == 4; count = 0 %><br clear="all"/><% end %>
      <% end %>
    <% end %>
  </div>
  <br clear="left">

  <%= render(:partial => "small_nav")%>

  <%= link_to("Back to Main Video Page", videosets_url) %>
</div>
